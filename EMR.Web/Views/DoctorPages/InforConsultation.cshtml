<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/qualityControl.css">
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>
	<div class="qualityControl">
		<div class="medrecord">
			<div class="layui-container" >
				<div class="layui-row">
				    <div class="layui-col-xs2">
				      <div class="grid-demo">
				      	<span>开始日期</span>
				      	<input type="text" id="test">
				      </div>
				    </div>
				   
				    <div class="layui-col-xs2">
				      <div class="grid-demo">
				      	<span>结束日期</span>
				      	<input type="text" id="test1">
				      </div>
				    </div>
				    <div class="layui-col-xs2">
					    <div class="grid-demo">
					      	<select name="" id="">
								<option value="">会诊请求</option>
								<option value="">全部会诊</option>
					      	</select>
					    </div>
				    </div>
				 </div>
				 <div class="rigBtn">
	             	<a class="layui-btn">查询</a>
	             	<a class="layui-btn">打印申请列表</a>
	             	<a class="layui-btn">打印被邀列表</a>
	             	<a class="layui-btn">导出申请列表</a>
	             	<a class="layui-btn">导出被邀列表</a>
	        	</div>
			</div>
		</div>
		<p>请求他科会诊</p>
		<div id="table"></div>
		<p>回复他科请求</p>
		<div id="demo"></div>
	</div>
</body>
<script>
layui.use(['laydate','table'],function () {
	var laydate = layui.laydate;
	var table = layui.table;
	laydate.render({
	  	elem:'#test',
	});
	laydate.render({
	  	elem:'#test1'
	});
	table.render({ //table 表格
	    elem: '#table'
	    ,cols: [[
		     {field:'username', title: '类型',align:'center'}
		    ,{field:'sex', title: '姓名',align:'center'}
		    ,{field:'city', title: "床号",align:'center'}
		    ,{field:'sign', title: '开单科别',align:'center'}
		    ,{field:'sign', title: '开单医师',align:'center'}
		    ,{field:'sign', title: '会诊医院',align:'center'}
		    ,{field:'sign', title: '会诊科别',align:'center'}
		    ,{field:'sign', title: '会诊医师',align:'center'}
		    ,{field:'sign', title: '回复日期',align:'center'}
		    ,{field:'sign', title: '状态',align:'center'}
		    ,{field:'sign', title: '操作',align:'center'}
	  	]]
	  });
	table.render({ //table 表格
	    elem: '#demo'
	    ,cols: [[
		     {field:'username', title: '类型',align:'center'}
		    ,{field:'sex', title: '姓名',align:'center'}
		    ,{field:'city', title: "床号",align:'center'}
		    ,{field:'sign', title: '开单科别',align:'center'}
		    ,{field:'sign', title: '开单医师',align:'center'}
		    ,{field:'sign', title: '会诊医院',align:'center'}
		    ,{field:'sign', title: '会诊科别',align:'center'}
		    ,{field:'sign', title: '会诊医师',align:'center'}
		    ,{field:'sign', title: '回复日期',align:'center'}
		    ,{field:'sign', title: '状态',align:'center'}
		    ,{field:'sign', title: '操作',align:'center'}
	  	]]
	  });
})

</script>
</html>