<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
	<link rel="stylesheet" href="~/Content/reset.css">
	<link rel="stylesheet" href="~/Content/qualityControl.css">
</head>
<body>
	<div class="qualityControl">
		<div class="medrecord">
	        <p class="word">综合查询</p>
	        <div class="rigBtn">
	             <a class="layui-btn search">查询</a>
	             <a class="layui-btn">清空</a>
	             <a class="layui-btn">导出到Excel</a>
	        </div>
	 	</div>

		<div class="qualityHeader clearfix">
			<div class="qualityTe">
				<div>
					<span>科室：</span>
					<select name="" id="">
						<option value="">全部</option>
						<option value="">血液</option>
						<option value="">外科</option>
					</select>
				</div>
				<div class="marginTop"><span>主治医师：</span><input type="text"></div>
				<div class="marginTop"><span>手术名称：</span><input type="text"></div>
			</div>
			<div class="qualityTe">
				<div class="marginTop"><span>病人姓名：</span><input type="text"></div>
				<div>
					<span>入院日期：</span>
			   		<input type="text" id="start1" style="width:25%">-<input type='text' id="stop1" style="width:25%">
				</div>
				<div class="marginTop"><span>入院诊断：</span><input type="text"></div>
			</div>
			<div class="qualityTe">
				<div class="marginTop"><span>住院号：</span><input type="text"></div>
				<div class="marginTop">
					<span>出院日期：</span>
			   		<input type="text" id="start2" style="width:25%">-<input type='text' id="stop2" style="width:25%">
				</div>
				<div><span>出院诊断：</span><input type="text"></div>
			</div>
			<div class="qualityTe">
				<div class="marginTop">
					<span>性别：</span>
					<select name="" id="">
						<option value="">是</option>
						<option value="">否</option>
						<option value="">全部</option>
					</select>
					<span>路经病人</span>
					<select name="" id="">
						<option value="">是</option>
						<option value="">否</option>
						<option value="">全部</option>
					</select>
				</div>
				<div>
					<span>年龄：</span>
					<input type="text" style="width:23%">- <input type="text" style="width:23%">
				</div>
			</div>
		</div>
		<table id="qualityTable">
			
		</table>
	</div>
</body>
<script src="~/Content/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/layui/layui.js"></script>
<script>
	layui.use(['laydate','table'],function () {
		var laydate = layui.laydate;
		var table = layui.table;
		laydate.render({
	  		elem:'#start1'
		});
		laydate.render({
	  		elem:'#stop1'
		});
		laydate.render({
	  		elem:'#start2'
		});
		laydate.render({
	  		elem:'#stop2'
		});
		table.render({ //table 表格
	    elem: '#qualityTable'
	    ,cols: [[
		     {field:'username', title: '床号',align:'center'}
		    ,{field:'sex', title: '病人姓名',align:'center'}
		    ,{field:'city', title: "住院号",align:'center'}
		    ,{field:'sign', title: '性别',align:'center'}
		    ,{field:'sign', title: '年龄',align:'center'}
		    ,{field:'sign', title: 'CP',align:'center'}
		    ,{field:'sign', title: '入院诊断',align:'center'}
		    ,{field:'sign', title: '出院诊断',align:'center'}
		    ,{field:'sign', title: '病区',align:'center'}
		    ,{field:'sign', title: '入院时间',align:'center'}
		    ,{field:'sign', title: '出院时间',align:'center'}
		    ,{field:'sign', title: '住院天数',align:'center'}
		    ,{field:'sign', title: '病人主治',align:'center'}
		    ,{field:'sign', title: '联系电话',align:'center'}
		    ,{field:'sign', title: '主管医师',align:'center'}
		    ,{field:'sign', title: '复印状态',align:'center'}
	  	]]
	  });
	});
	$('.search').click(function(){
		$('.qualityTable').show();
	})
</script>
</html>
	