	laydate.render({
	  	elem:'#test',
	});
	laydate.render({
	  	elem:'#test1',
	});
	table.render({ //table 表格
	    elem: '#table'
	    ,cols: [[
		     {field:'username', title: '状态',align:'center'}
		    ,{field:'sign', title: '检查时间',align:'center'}
		    ,{field:'sign', title: '检查者',align:'center'}
		    ,{field:'sign', title: '符合时间',align:'center'}
		    ,{field:'sign', title: '符合者',align:'center'}
		    ,{field:'sign', title: '操作',align:'center'}
	  	]]
	  });
})

</script>
</html>