<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/qualityControl.css">
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>
	<div class="qualityControl">
		<div class="medrecord">
			<div class="layui-container" >
				<div class="layui-row">
				    <div class="layui-col-xs4">
				      <div class="grid-demo">
				      	<span>申请日期</span>
				      	<input type="text" id="test" style="width:31%">- <input type="text" id="test1" style="width:31%">
				      </div>
				    </div>
				   <div class="layui-col-xs2">
					    <div class="grid-demo">
					    	<span>状态</span>
					      	<select name="" id="">
								<option value="">会诊请求</option>
								<option value="">全部会诊</option>
					      	</select>
					    </div>
				    </div>
				    <div class="layui-col-xs2">
				      <div class="grid-demo">
				      	<span>住院号</span>
				      	<input type="text">
				      </div>
				    </div>
				    <div class="layui-col-xs2">
					    <div class="grid-demo">
					      	<span>患者姓名</span>
				      		<input type="text">	
					    </div>
				    </div>
				 </div>
				 <div class="rigBtn">
	             	<a class="layui-btn">差阅申请</a>
	             	<a class="layui-btn">查询</a>
	        	</div>
			</div>
		</div>
		<div id="table"></div>
	</div>
</body>

<script>
layui.use(['laydate','table'],function () {
	var laydate = layui.laydate;
	var table = layui.table;
	laydate.render({
	  	elem:'#test',
	  	type:'datetime'
	});
	laydate.render({
	  	elem:'#test1',
	  	type:'datetime'
	});
	table.render({ //table 表格
	    elem: '#table'
	    ,cols: [[
		     {field:'username', title: '申请时间',align:'center'}
		    ,{field:'sex', title: '住院号',align:'center'}
		    ,{field:'city', title: "患者姓名",align:'center'}
		    ,{field:'sign', title: '出院时间',align:'center'}
		    ,{field:'sign', title: '查询目的',align:'center'}
		    ,{field:'sign', title: '申请人',align:'center'}
		    ,{field:'sign', title: '查阅期限',align:'center'}
		    ,{field:'sign', title: '审核人',align:'center'}
		    ,{field:'sign', title: '状态',align:'center'}
		    ,{field:'sign', title: '操作',align:'center'}
	  	]]
	  });
})

</script>
</html>