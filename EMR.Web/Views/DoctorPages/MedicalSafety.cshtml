<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/qualityControl.css">
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>
	<div class="qualityControl">
		<div class="medrecord">
			<span>科室</span>
			<select name="" id="">
				<option value="">全部</option>
				<option value="">一病区</option>
			</select>
			<span>发生日期</span>
			<input type="text" id="test" style="width: 8%">-<input type="text" id="test1" style="width: 8%">
			 <div class="rigBtn">
	         	<a class="layui-btn">查询</a>
	         	<a class="layui-btn">新增</a>
	    	</div>
		</div>
		<table id="qualityTable"></table>
	</div>
</body>
<script src="layui/layui.js"></script>
<script>
layui.use(['laydate','table'],function () {
	var laydate = layui.laydate;
	var table = layui.table;
	laydate.render({
	  	elem:'#test',
	});
	laydate.render({
	  	elem:'#test1',
	});
	table.render({ //table 表格
	    elem: '#qualityTable'
	    ,cols: [[
		    ,{field:'sign', title: '病人姓名',align:'center'}
		    ,{field:'sign', title: '住院号',align:'center'}
		    ,{field:'sign', title: '学习讨论时间',align:'center'}
		    ,{field:'sign', title: '学习讨论类型',align:'center'}
		    ,{field:'sign', title: '记录者',align:'center'}
		    ,{field:'sign', title: '科室',align:'center'}
	  	]]
	  });
})

</script>
</html>