						<td><input type="text"></td>
					</tr>
					<tr>
						<td><span class="wrong">x</span><input type="text" id="test2"></td>
						<td><input type="text"></td>
						<td><input type="text"></td>
						<td><input type="text" id="test3"></td>
						<td><input type="text"></td>
						<td><input type="text"></td>
					</tr>
					<tr>
						<td rowspan="3">康复评估</td>
					</tr>
					<tr>
						<td colspan="5"><textarea name="" id="" cols="30" rows="6" class="text"></textarea></td>
					</tr>
					<tr><td colspan="5">签名<input type="text" style="width:20%"></td></tr>
				</table>
			</div>
		</div>

	</div>
</body>
<script>
layui.use('laydate',function(){
	var laydate = layui.laydate;
	laydate.render({
	  elem: '#test'//指定元素
	});
	laydate.render({
	  elem: '#test1'//指定元素
	});
})

</script>
</html>
