<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/qualityControl.css">
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>
	<div class="qualityControl">
		<div class="medrecord">
            <div class="layui-container">
                <div class="layui-row">
                    <div class="layui-col-xs4">
                        <div class="grid-demo">
                            <span>手术日期：</span>
                            <input type="text" id="start1">-<input type='text' id="stop1" >
                        </div>
                    </div>
                    <div class="layui-col-xs2">
                        <div class="grid-demo grid-demo-bg3">
                            <span>科室：</span>
                            <select name="" id="">
                                <option value="">全部</option>
                                <option value="">血液</option>
                                <option value="">外科</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
	        <div class="rigBtn">
	             <a class="layui-btn search">查询</a>
	             <a class="layui-btn search">导出到Excel</a>
	        </div>
	 	</div>

		
		<table class="qualityTable none">
			<thead>
				<tr>
					<td rowspan="2">序号</td>
					<td rowspan="2">科室</td>
					<td colspan="2">医师</td>
					<td rowspan="2">主刀</td>
					<td rowspan="2">Ⅰ助</td>
				</tr>
				<tr>
					<td>姓名</td>
					<td>职称</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>0</td>
					<td>合计</td>
					<td>0</td>
					<td>0</td>
					<td>0</td>
					<td>0</td>
				</tr>
			</tbody>
		</table>
	</div>
</body>
<script src="jquery-1.10.2.min.js"></script>
<script src="layui/layui.js"></script>
<script>
	layui.use(['laydate','table'],function () {
		var laydate = layui.laydate;
		var table = layui.table;
		laydate.render({
	  		elem:'#start1'
		});
		laydate.render({
	  		elem:'#stop1'
		});
	});
	$('.search').click(function(){
		$('.qualityTable').show();
	})
</script>
</html>
	