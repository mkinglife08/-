<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/qualityControl.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>
    <div class="qualityControl">
        <div class="medrecord">
            <div class="layui-container">
                <div class="layui-row">
                    <div class="layui-col-xs4">
                        <div class="grid-demo">
                            <span>统计时间：</span>
                            <input type="text" id="start1" class="timer">-<input type='text' id="stop1" class="timer">
                        </div>
                    </div>
                    <div class="layui-col-xs4">
                        <span class="layui-form">
                            <input type="radio" name="nome" title="按科室统计">按科室统计
                            <input type="radio" name="nome" title="按医生统计">按医生统计
                        </span>
                        <span>
                            <select name="" id="">
                                <option value="">全部</option>
                                <option value="">脑外科</option>
                                <option value="">血液科</option>
                            </select>
                        </span>
                    </div>
                    <div class="rigBtn">
                        <a class="layui-btn search">查询</a>
                        <a class="layui-btn">导出总表</a>
                        <a class="layui-btn">打印</a>
                    </div>
                </div>
            </div>

        </div>
        <table class="qualityTable">
            <thead>
                <tr>
                    <td>科室</td>
                    <td>申请</td>
                    <td>被邀</td>
                    <td>外院</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>血液科</td>
                    <td>张医生</td>
                    <td>主治</td>
                </tr>
            </tbody>
        </table>
        <table class="qualityTable none">
            <thead>
                <tr>
                    <td>医生</td>
                    <td>申请</td>
                    <td>被邀</td>
                    <td>外院</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>张医生</td>
                    <td>血液科</td>
                    <td>22</td>
                    <td>主治</td>
                </tr>
                <tr>
                    <td>合计</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
	layui.use(['laydate','table'],function () {
		var laydate = layui.laydate;
		var table = layui.table;
		laydate.render({
	  		elem:'#start1'
		});
		laydate.render({
	  		elem:'#stop1'
		});
	});
	$('.search').click(function(){
		$('.qualityTable').show();
    })
</script>

	