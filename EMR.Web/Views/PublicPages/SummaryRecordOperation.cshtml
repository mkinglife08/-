<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>运行病历检查</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/reset.css">
    <link rel="stylesheet" href="~/Content/qualityControl.css">
    <script src="~/Scripts/layui/layui.js"></script>
</head>
<body>
	<div class="qualityControl">
		<div class="medrecord">
            <span>统计日期：</span>
            <input type="text" id="start2" style="width:15%">-<input type="text" id="stop2" style="width:15%">
	        @*<p class="word">运行病历检查汇总表</p>*@
	        <div class="rigBtn">
	             <a class="layui-btn">查询</a>
	             <a class="layui-btn">导出到Excel</a>
	        </div>
	 	</div>
	 
	 	<table class="qualityTable" id="table">
			<thead>
				<tr>
					<td rowspan="2">序号</td>
					<td rowspan="2">科室</td>
					<td rowspan="2">日期</td>
					<td rowspan="2">检查病例数</td>
					<td rowspan="2">未按时完成病例数</td>
					<td rowspan="2">按时整改病例数</td>
					<td colspan="5">合计</td>
				</tr>
				<tr>
					<td>检查病例数</td>
					<td>未按时完成病例数</td>
					<td>按时整改病例数</td>
					<td>按时完成率</td>
					<td>按时整改率</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>1</td>
					<td>2</td>
					<td>3</td>
					<td>4</td>
					<td>5</td>
					<td>6</td>
					<td>7</td>
					<td>8</td>
					<td>9</td>
					<td>0</td>
					<td>11</td>
				</tr>
			</tbody>
	 	</table>
	</div>
</body>
<script>
	layui.use(['laydate','table'],function () {
		var laydate = layui.laydate;
		var table = layui.table;
		laydate.render({
	  		elem:'#start2'
		});
		laydate.render({
	  		elem:'#stop2'
		});

	})
</script>
</html>